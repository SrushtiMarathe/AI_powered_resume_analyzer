import re
import pdfplumber
import docx
from google.colab import files

def extract_pdf(path):
    text = ""
    with pdfplumber.open(path) as pdf:
        for page in pdf.pages:
            t = page.extract_text()
            if t:
                text += t + "\n"
    return text

def extract_docx(path):
    d = docx.Document(path)
    return "\n".join([p.text for p in d.paragraphs if p.text.strip()])

def load_resume(path):
    if path.endswith(".pdf"):
        return extract_pdf(path)
    elif path.endswith(".docx"):
        return extract_docx(path)
    elif path.endswith(".txt"):
        return open(path, "r", encoding="utf-8").read()
    else:
        raise ValueError("Unsupported file type! Upload PDF, DOCX, or TXT.")
def analyze_resume(text, skills_list):
    text_low = text.lower()

    # --- Contact Info ---
    email = re.findall(r"[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[A-Za-z]{2,}", text)
    phone = re.findall(r"\b\d{10}\b", text)

    contact_score = 100 if (email or phone) else 40

    # --- Skills ---
    skills_list = [s.strip().lower() for s in skills_list]
    matched = [s for s in skills_list if s in text_low]
    missing = [s for s in skills_list if s not in matched]

    skill_score = int((len(matched) / len(skills_list)) * 100) if skills_list else 0

    # --- Basic Sections ---
    sections = ["experience", "education", "skills", "projects"]
    found_sections = [s for s in sections if s in text_low]

    section_score = int((len(found_sections) / 4) * 100)

    # --- Final Score ---
    final_score = int(0.5 * skill_score + 0.3 * section_score + 0.2 * contact_score)

    return {
        "ATS Score": final_score,
        "Skills Entered": skills_list,
        "Skills Matched": matched,
        "Skills Missing": missing,
        "Sections Detected": found_sections,
        "Email Found": email,
        "Phone Found": phone
    }
print("Upload your resume (PDF, DOCX, TXT):")
uploaded = files.upload()

file_path = list(uploaded.keys())[0]
resume_text = load_resume(file_path)

print("\nResume Loaded Successfully!")
print("\n--- Preview ---\n")
print(resume_text[:1200], "...")
job_role = input("Enter Job Role (any role): ")

skills_input = input("Enter required skills (comma separated): ")
skills_list = [s.strip() for s in skills_input.split(",")]

results = analyze_resume(resume_text, skills_list)
